<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/genres.css" />
    <title>Document</title>
  </head>

  <body>
    <div class="container">
      <%- include('../header') %>

      <div class="genre-list-header">
        <div class="back-button">
            <a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-icon lucide-arrow-left"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg></a>
        </div>
        <div class="add-genre-button">
            <a href="/genres/newgenre"><svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus-icon lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg> New Genre</a>
        </div>
      </div>

      <div class="genre-list">
        <% genres.forEach (genre=> { %>
        <div class="genre-item">
          <p class="genre-name"><%= genre.name %></p>
          <a href="/genres/<%= genre.id %>/delete" class="genre-delete"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-x-icon lucide-x"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg></a>
        </div>
        <% }) %>
      </div>
      
    </div>
  </body>
</html>
