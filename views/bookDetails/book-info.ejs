<div class="book-info">
  <h1 class="book-title"><%= book.title %></h1>

  <div class="description">
    <p><strong>Description:</strong></p>
    <p><%= book.description || "No description available." %></p>
  </div>

  <div class="details">
    <p><strong>Author:</strong> <%= book.author %></p>
    <p><strong>Published Year:</strong> <%= book.published_year %></p>
    <p><strong>ISBN:</strong> <%= book.isbn %></p>
    <p><strong>Pages:</strong> <%= book.pages %></p>
    <p><strong>In Stock:</strong> <%= book.stock %></p>
  </div>

  <div class="genres">
    <% if (book.genres && book.genres.length> 0) { %> <% book.genres.forEach(genre=> { %>
    <span class="genre-badge"> <%= genre %> </span>
    <% }) %> <% } else { %>
    <span>None</span>
    <% } %>
  </div>

  <div class="action-buttons">
    <a href="/<%= book.id %>/edit" class="edit-link">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pencil-icon lucide-pencil"><path d="M21.174 6.812a1 1 0 0 0-3.986-3.987L3.842 16.174a2 2 0 0 0-.5.83l-1.321 4.352a.5.5 0 0 0 .623.622l4.353-1.32a2 2 0 0 0 .83-.497z"/><path d="m15 5 4 4"/></svg>
    </a>

    <button class="delete-button" onclick="openDeleteModal('/<%= book.id %>/delete?from=details', '<%= book.title %>')">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash2-icon lucide-trash-2"><path d="M10 11v6"/><path d="M14 11v6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6"/><path d="M3 6h18"/><path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
    </button>

    <a href="/" class="back-link">        
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-icon lucide-arrow-left"><path d="m12 19-7-7 7-7" /><path d="M19 12H5" /></svg>
    </a>
  </div>


</div>
